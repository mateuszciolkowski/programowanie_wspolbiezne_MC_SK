<Window x:Class="BallApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ball Generator" Height="600" Width="600">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Liczba kulek:" VerticalAlignment="Center" />
            <TextBox Width="50" Margin="5,0" Text="{Binding BallCount, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Apply" Command="{Binding ApplyCommand}" />
        </StackPanel>

        <Canvas Width="500" Height="500" Background="LightGray">
            <ItemsControl ItemsSource="{Binding Balls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Fill="Red"
                                 Width="{Binding Radius}"
                                 Height="{Binding Radius}"
                                 Canvas.Left="{Binding X}"
                                 Canvas.Top="{Binding Y}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </StackPanel>
</Window>
