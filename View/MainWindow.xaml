<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:View"
        Title="Ball Board" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <TextBox Text="{Binding BoardWidth}" Width="100" Margin="10"/>
            <TextBox Text="{Binding BoardHeight}" Width="100" Margin="10"/>
            <TextBox Text="{Binding AmountOfBalls}" Width="100" Margin="10" />

            <Button Content="Zastosuj" Command="{Binding ApplyCommand}" Width="100" Margin="10"/>

            <ListBox ItemsSource="{Binding Balls}" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Ellipse Width="{Binding Radius}" Height="{Binding Radius}" Fill="Red"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
