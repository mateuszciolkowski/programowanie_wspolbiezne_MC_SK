<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ViewModel;assembly=ViewModel"
        Title="Ball Game" Height="600" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Add Ball" Command="{Binding AddBallCommand}" Width="100" Height="30" Margin="5"/>
            <Button Content="Remove Ball" Command="{Binding RemoveBallCommand}" Width="100" Height="30" Margin="5"/>
            <Button Content="Clear Balls" Command="{Binding ClearBallsCommand}" Width="100" Height="30" Margin="5"/>
            <Button Content="Start Moving Balls" Command="{Binding StartMovingBallsCommand}" Width="150" Height="30" Margin="5"/>
            <Button Content="Stop Moving Balls" Command="{Binding StopMovingBallsCommand}" Width="150" Height="30" Margin="5"/>
        </StackPanel>

        <Canvas Name="GameCanvas" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10">
            <ItemsControl ItemsSource="{Binding Balls}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="{Binding Radius}" Height="{Binding Radius}" 
                                 Fill="Red" 
                                 Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</Window>
