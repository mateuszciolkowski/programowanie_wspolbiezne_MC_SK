<Window x:Class="View.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ViewModel;assembly=ViewModel">
    <!-- Upewnij się, że masz odpowiednią przestrzeń nazw i nazwę assembly --> 
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Wybierz liczbę kulek:" HorizontalAlignment="Center"/>
            <TextBox Name="BallsCountTextBox" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <Button Content="Przejdź do gry" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Click="OnStartGameClicked"/>
        </StackPanel>
    </Grid>
</Window>
